---
const { lsrc, rsrc, customClass, caption } = Astro.props;
---

<div class='columns-1 
md:columns-2 
max-w-5xl 
mx-auto 
doubleImage
mt-6

2xl:max-w-[1340px]
2xl:mt-10'>
    <video width="auto" playsinline autoplay muted no-controls loop class={'!aspect-square w-full !col-start-1 !col-end-2 rounded-md lg:rounded-2xl !my-0 not-prose' + ' ' + customClass}>
        <source src={lsrc} type="video/mp4"></source>
    </video>

    <video width="auto" playsinline autoplay muted no-controls loop class={'!aspect-square w-full !col-start-2 !col-end-3 rounded-md lg:rounded-2xl !my-0 not-prose' + ' ' + customClass}>
        <source src={rsrc} type="video/mp4"></source>
    </video>
</div>
<figcaption class="mx-auto
    max-w-[640px] 
    2xl:max-w-[768px]">
    {caption}
</figcaption>