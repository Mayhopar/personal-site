---
const { lsrc, rsrc, customClass, caption } = Astro.props;
---

<div class='columns-1 
md:columns-2 
max-w-5xl 
mx-auto 
doubleImage
mt-6

2xl:max-w-[1340px]
2xl:mt-10'>
    <video width="auto" playsinline autoplay muted loop no-controls preload="auto" class={'!aspect-square w-full !col-start-1 !col-end-2 rounded-md lg:rounded-xl !my-0 not-prose' + ' ' + customClass} src={lsrc}>
    </video>

    <video width="auto" playsinline autoplay muted loop no-controls preload="auto" class={'mt-4 !aspect-square w-full !col-start-2 !col-end-3 rounded-md lg:rounded-xl !my-0 not-prose' + ' ' + customClass} src={rsrc}>
    </video>
</div>
<figcaption class="mx-auto
    max-w-[640px] 
    2xl:max-w-[768px]">
    {caption}
</figcaption>