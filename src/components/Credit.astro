---
import { Image } from 'astro:assets';
const { src, url, name, role, } = Astro.props;
---
<a href={url} target="_blank" class="hover:opacity-80 cursor-alias no-underline">
    <div class="credit
    flex
    flex-row
    items-center
    gap-3
    2xl:gap-4">
        <Image class="rounded-full \
        h-10 \
        w-10 \
        2xl:h-12 \
        2xl:w-12 \
        stroke-neutral-100 \
        !m-0 "
        src={src}
        alt={name}
        height={96}
        width={96}
        />
        <div class="flex
        flex-col
        gap-1
        2xl:gap-[1.5em]">
            <p class="h-min !text-[0.8125em] !leading-4 !text-neutral-700 font-normal">{name}</p>
            <p class="h-min !text-[0.8125em] !leading-4 !text-neutral-400 font-normal">{role}</p>
        </div>
    </div>
</a>